<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:background="#F6F0F0"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_2"></ImageView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:text="xxxjr"
                    android:textSize="28dp"></TextView>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="4dp"

                    android:text="会员名:烟雨任平川"
                    android:textSize="16dp"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/text4"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="8dp"
                android:text="查看全部">

            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_enter">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_wait">

            </ImageView>

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_done">

            </ImageView>

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_have">

            </ImageView>

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_comment">

            </ImageView>

            <ImageView
                android:id="@+id/pic5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_end">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text5"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:text="待付款">

            </TextView>

            <TextView
                android:id="@+id/text6"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="27dp"
                android:text="待发货">

            </TextView>

            <TextView
                android:id="@+id/text7"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:text="待收货">

            </TextView>

            <TextView
                android:id="@+id/text8"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:text="待评价">

            </TextView>

            <TextView
                android:id="@+id/text9"
                android:layout_width="66dp"
                android:layout_height="25dp"
                android:layout_marginLeft="22dp"
                android:text="退款/售后">

            </TextView>
        </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recycle_my">

</androidx.recyclerview.widget.RecyclerView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
