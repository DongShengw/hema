<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#E8E3E3"
    >

    <RelativeLayout
        android:layout_width="195dp"
        android:layout_height="216dp"
        android:background="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <ImageView
            android:id="@+id/home_goods_picture"
            android:layout_width="155dp"
            android:layout_height="118dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

        </ImageView>

        <TextView
            android:id="@+id/home_goods_name"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="描述"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_goods_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="155dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="类别"
            android:textColor="@color/black"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:id="@+id/home_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="185dp"
            android:singleLine="true"
            android:text="单价"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/home_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="175dp"

            android:background="@drawable/image_btn_press" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>